<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectItem">

    <TextView
        android:id="@+id/textViewItemStartDate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textViewItemEndDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/input"
        android:gravity="center_horizontal|center_vertical"
        android:text="SD"
        android:textColor="#3D4159" />

    <TextView
        android:id="@+id/textViewItemEndDate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ProjectD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/input"
        android:gravity="center_horizontal|center_vertical"
        android:text="ED"
        android:textColor="#3D4159" />

    <TextView
        android:id="@+id/ProjectD"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/projectC"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/input"
        android:gravity="center_horizontal|center_vertical"
        android:text="Project description"
        android:textColor="#3D4159" />

    <TextView
        android:id="@+id/projectC"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/input"
        android:gravity="center_horizontal|center_vertical"
        android:text="Project Total Cost"
        android:textColor="#3D4159" />

    <TextView
        android:id="@+id/textViewProjectName"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_above="@+id/textViewItemStartDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="38dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Project Name" />


</RelativeLayout>